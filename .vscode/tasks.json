{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Zbuduj Projekt MergeSort",
      "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++17",

        // 1. Dodaj ścieżkę do folderu z plikami .h (merge-sort-app)
        "-I",
        "${workspaceFolder}/merge-sort-app",

        // 2. Wskaż konkretnie plik main.cpp (zamiast ${file})
        // Dzięki temu build zadziała nawet jak masz otwarty plik .h
        "${workspaceFolder}/source-files/main.cpp",

        "-o",
        // 3. Zapisz plik .exe w głównym folderze (zgodnie z Twoim drzewem)
        "${workspaceFolder}/main.exe"
      ],
      "options": {
        // Ustawiamy katalog roboczy na główny folder projektu
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Kompilator skonfigurowany dla struktury wielofolderowej."
    }
  ],
  "version": "2.0.0"
}
